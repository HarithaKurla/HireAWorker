<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.s528744.hireaworker.WorkerDetails">

    <RelativeLayout
        android:layout_width="405dp"
        android:layout_height="521dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-6dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="First Name :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Last Name :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Capability :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Address :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Zipcode :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="PhoneNumber :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Email :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView2"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Akshay"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@id/textView3"
            android:layout_alignTop="@+id/textView3"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Vontari"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@id/textView4"
            android:layout_alignTop="@+id/textView4"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Carpenter"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@id/textView5"
            android:layout_alignTop="@+id/textView5"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Maryville"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView6"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@id/textView6"
            android:layout_alignTop="@+id/textView6"
            android:ems="10"
            android:hint="Enter Zipcode"
            android:inputType="number"
            android:text="64468"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/textView7"
            android:ems="10"
            android:inputType="number"
            android:text="6605280410"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/editText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textView8"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@id/textView8"
            android:layout_alignTop="@+id/textView8"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="akshay@gmail.com"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="131dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:entries="@array/rating_array"
            android:prompt="@string/rating_promt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.639"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.754" />

        <EditText
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spinner"
            android:layout_below="@+id/button2"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Enter Message"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/message"
            android:layout_alignBottom="@+id/message"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/message"
            android:layout_toEndOf="@+id/message"
            android:onClick="contact"
            android:text="Contact"
            android:textAlignment="viewStart" />

        <Button
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/spinner"
            android:layout_toEndOf="@+id/spinner"
            android:onClick="Rate"
            android:text="Rate Here"

            android:textAlignment="viewStart" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:fontFamily="serif"
        android:text="Akshay Details"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="4dp" />

</android.support.constraint.ConstraintLayout>

